  },
  "keywords": [
    "color",
    "nextjs",
    "react"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build-app && npm run move-dist && npm run clean",
    "prepublishOnly": "npm run build",
    "build-app": "tsc",
    "move-dist": "rm -rf ./demo/node_modules/next-colors/dist && cp -r dist ./demo/node_modules/next-colors/",
    "clean": "rm -rf ./demo/.next",
    "docs": "npx typedoc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.3.1",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typedoc": "~0.26.3",
    "typedoc-material-theme": "^1.1.0",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
