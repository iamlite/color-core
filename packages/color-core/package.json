{
  "name": "color-core",
  "version": "1.4.0",
  "description": "`color-core` is a comprehensive, type-safe color manipulation library for TypeScript and JavaScript applications. It provides a powerful toolkit for working with colors across multiple color spaces, making it an essential tool for developers working on projects that require advanced color handling.",
  "author": "Tariel Davidashvili <hello@tariel.me> (http://tariel.me/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/iamlite/color-core/issues",
    "email": "hello@tariel.me"
  },
  "homepage": "https://color-core.com",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iamlite/color-core.git"
  },
  "keywords": [
    "color",
    "colours",
    "colors",
    "colour",
    "rgb",
    "hsl",
    "hsv",
    "hex",
    "cmyk",
    "lab",
    "lch",
    "xyz",
    "yuv",
    "color-conversion",
    "color-manipulation",
    "color-harmony",
    "color-picker",
    "color-scheme",
    "colorspace",
    "typescript",
    "javascript",
    "react",
    "nextjs",
    "frontend",
    "ui",
    "design"
  ],
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "lb": "npm-run-all test build clean",
    "test": "jest",
    "clean": "find . -name .DS_Store -type f -print0 | xargs -0 -I {} sh -c 'echo \"Removing {}\"; git rm -f --ignore-unmatch \"{}\"; rm \"{}\"'",
    "prepublishOnly": "npm-run-all test build readme",
    "readme": "cp ../../README.md ./README.md"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.4.8",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "cpy-cli": "^5.0.0",
    "cross-env": "^7.0.3",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jsdom": "^24.1.1",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.2.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/__tests__/**/*.ts?(x)",
      "**/?(*.)+(spec|test).ts?(x)"
    ],
    "collectCoverage": true,
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "moduleNameMapper": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy"
    }
  },
  "dependencies": {
    "axios": "^1.7.2"
  },
  "funding": [
    {
      "type": "github",
      "url": "https://github.com/sponsors/iamlite"
    },
    {
      "type": "kofi",
      "url": "https://ko-fi.com/iamlite"
    }
  ],
  "packageManager": "yarn@4.3.1"
}
