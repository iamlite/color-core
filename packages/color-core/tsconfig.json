{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/.color.ts"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/__tests__/*"],
  "typeRoots": ["../node_modules/@types", "./node_modules/@types", "../node_modules/@testing-library"],
  "types": ["jest", "jest-dom"]
}
