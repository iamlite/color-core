{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "es2015"],
    "jsx": "react",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": ["**/*.test.ts", "**/*.test.tsx", "**/__tests__/*"],
  "typeRoots": ["../node_modules/@types", "./node_modules/@types", "../node_modules/@testing-library"],
  "types": ["jest", "jest-dom"],
  "typedocOptions": {
    "entryPoints": ["src"],
    "out": "demo/public/docs",
    "hostedBaseUrl": "https://color-core.com/docs",
    "useHostedBaseUrlForAbsoluteLinks": true,
    "lang": "en",
    "hideGenerator": true,
    "includeVersion": false,
    "highlightLanguages": ["js", "ts", "jsx", "tsx", "bash"],
    "plugin": ["./doctheme/cjs/index.js"],
    "theme": "dumi",
    "navigationLinks": {
      "Home": "https://color-core.com",
      "Demo": "https://color-core.com/demo",
      "GitHub": "https://github.com/iamlite/color-core",
      "NPM": "https://www.npmjs.com/package/color-core"
    },
    "navigationLinkTargets": {
      "Home": "_self",
      "Demo": "_self",
      "GitHub": "_blank",
      "NPM": "_blank"
    },
    "logoImage": "https://typedoc.org/images/logo-32.png",
    "logoTitle": "color-core",
    "footerAlign": "center"
  }
}
